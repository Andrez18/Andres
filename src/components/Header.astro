      padding: 0;
      flex-direction: column;
      z-index: 1;
    }

    .menu a {
      margin-bottom: 8px;
    }
  }
</style>

<script is:inline>
  document.addEventListener("DOMContentLoaded", function () {
    const menuToggle = document.getElementById("menu-toggle");
    const mainMenu = document.getElementById("main-menu");

    if (menuToggle && mainMenu) {
      menuToggle.addEventListener("click", function () {
        mainMenu.classList.toggle("active");
      });

      document.addEventListener("click", function (event) {
        if (!mainMenu.contains(event.target) && event.target !== menuToggle) {
          mainMenu.classList.remove("active");
        }
      });
    }

    const firstNameElement = document.getElementById("first-name");
    const lastNameElement = document.getElementById("last-name");

    const firstName = "Andrés";
    const lastName = "Gómez";

    function typeWriter(element, text, callback) {
      let i = 0;
      element.textContent = "";

      function type() {
        if (i < text.length) {
          element.textContent += text.charAt(i);
          i++;
          setTimeout(type, 150);
        } else if (callback) {
          setTimeout(callback, 300);
        }
      }

      type();
    }

    function animacionNombres() {
      firstNameElement.textContent = "";
      lastNameElement.textContent = "";

      setTimeout(() => {
        typeWriter(firstNameElement, firstName, () => {
          typeWriter(lastNameElement, lastName, () => {
            // Wait before restarting
            setTimeout(animacionNombres, 4000);
          });
        });
      }, 500);
    }

    animacionNombres();
  });
</script>
