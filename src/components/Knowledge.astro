        <!-- Controles del slider -->
        <div class="slider-controls">
            <button class="slider-prev"><i class="fa-solid fa-chevron-left"></i></button>
            <button class="slider-next"><i class="fa-solid fa-chevron-right"></i></button>
        </div>
    </div>
</section>

<style>
    .slider {
        width: 100%;
        overflow: hidden;
        position: relative;
    }

    .skills-section{
        margin-top: 20px;
    }

    .slider-track {
        display: flex;
        transition: transform 0.5s ease-in-out;
    }

    .skill-card {
        background-color: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        padding: 20px;
        text-align: center;
        min-width: 100px;
        margin: 0 10px;
        flex: 0 0 auto;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .skills-container h2{
        font-size: 2rem;
        font-weight: 600;
        margin-bottom: 20px;
        text-align: center;
        margin-top: 100px;
    }

    .skills-container p{
        font-size: 1.2rem;
        color: rgba(255, 255, 255, 0.8);
        text-align: center;
        margin-bottom: 20px;
    }

    .slider-controls {
        margin-top: 20px;
        display: flex;
        justify-content: center;
        gap: 20px;
    }

    .slider-controls button {
        background-color: #5b6ed9;
        border: none;
        color: #fff;
        padding: 10px 20px;
        border-radius: 20px%;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .slider-controls button:hover {
        background-color: #4a5bb8;
    }
</style>

<script>
    const sliderTrack = document.querySelector('.slider-track');
    const prevButton = document.querySelector('.slider-prev');
    const nextButton = document.querySelector('.slider-next');
    const cardWidth = document.querySelector('.skill-card').offsetWidth + 20;

    let currentPosition = 0;
    let autoSlideInterval;

    function moveSlider(direction) {
        const maxMove = -(sliderTrack.children.length * cardWidth - cardWidth * 3); 

        if (direction === 'next') {
            if (currentPosition > maxMove) {
                currentPosition -= cardWidth;
            } else {
                currentPosition = 0;
            }
        } else {
            if (currentPosition < 0) {
                currentPosition += cardWidth;
            } else {
                currentPosition = maxMove; 
            }
        }

        sliderTrack.style.transform = `translateX(${currentPosition}px)`;
    }

    function startAutoSlide() {
        autoSlideInterval = setInterval(() => {
            moveSlider('next');
        }, 2000); 
    }

    function stopAutoSlide() {
        clearInterval(autoSlideInterval);
    }

    // Eventos para los botones
    nextButton.addEventListener('click', () => {
        stopAutoSlide();
        moveSlider('next');
        startAutoSlide();
    });

    prevButton.addEventListener('click', () => {
        stopAutoSlide();
        moveSlider('prev');
        startAutoSlide();
    });

    startAutoSlide();
</script>
